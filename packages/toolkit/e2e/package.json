{
  "private": "true",
  "name": "@modern-js/e2e",
  "version": "0.1.0",
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm",
    "build": "wireit",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest dev --no-coverage",
    "test:ui": "vitest --ui"
  },
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./playwright": {
      "default": "./dist/exports/playwright.js"
    }
  },
  "typesVersions": {
    "*": {
      "playwright": [
        "./dist/exports/playwright.d.ts"
      ]
    }
  },
  "dependencies": {
    "@playwright/test": "^1.25.1",
    "connect": "^3.7.0",
    "get-port": "^6.1.2",
    "playwright": "^1.25.1",
    "serve-static": "^1.14.1"
  },
  "devDependencies": {
    "@types/connect": "^3.4.35",
    "@types/node": "^14",
    "@types/serve-static": "^1.13.10",
    "memfs": "^3.4.7",
    "nanoid": "3.3.4",
    "typescript": "^4"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*"
      ]
    }
  }
}
