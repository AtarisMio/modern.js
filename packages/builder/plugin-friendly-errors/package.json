{
  "name": "@modern-js/plugin-friendly-errors",
  "description": "Recognizes certain classes of webpack errors and cleans, aggregates and prioritizes them to provide a better Developer Experience",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "friendly",
    "errors",
    "webpack",
    "plugin"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "version": "2.0.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "jsnext:modern": "./dist/index.js",
  "exports": {
    ".": {
      "jsnext:source": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest dev --no-coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "stacktracey": "^2.1.8"
  },
  "devDependencies": {
    "@modern-js/builder-webpack-provider": "workspace:*",
    "@modern-js/e2e": "workspace:*",
    "@modern-js/utils": "workspace:*",
    "@scripts/vitest-config": "workspace:*",
    "@types/node": "^14",
    "typescript": "^4",
    "webpack": "^5.74.0"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ]
}
