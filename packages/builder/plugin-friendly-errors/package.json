{
  "name": "@modern-js/plugin-friendly-errors",
  "description": "Recognizes certain classes of webpack errors and cleans, aggregates and prioritizes them to provide a better Developer Experience",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "friendly",
    "errors",
    "webpack",
    "plugin"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "version": "2.0.0",
  "jsnext:source": "./src/index.ts",
  "types": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "jsnext:modern": "./dist/index.js",
  "exports": {
    ".": {
      "jsnext:source": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "only-allow-pnpm",
    "build": "wireit",
    "dev": "tsc --watch",
    "jest": "jest",
    "test": "vitest run",
    "test:watch": "vitest dev --no-coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "error-stack-parser": "^2.0.2",
    "string-width": "^2.0.0",
    "strip-ansi": "^5"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@scripts/vitest-config": "workspace:*",
    "@types/jest": "^29.2.0",
    "@types/node": "^14",
    "autoprefixer": "^9.6.0",
    "babel-core": "6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader-7": "npm:babel-loader@7.1.5",
    "babel-loader-8": "npm:babel-loader@8.0.6",
    "css-loader": "^2.1.1",
    "eslint-loader": "^2.1.2",
    "expect": "^24.8.0",
    "jest": "^29.2.1",
    "memory-fs": "^0.4.1",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "sass": "^1.20.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "typescript": "^4",
    "webpack": "^4.31.0",
    "webpack5": "npm:webpack@^5.74.0"
  },
  "peerDependencies": {
    "webpack": "^4.0.0 || ^5.0.0"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "types": "./dist/index.d.ts"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "files": [
        "src/**/*",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**/*"
      ]
    }
  }
}
